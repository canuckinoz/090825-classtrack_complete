generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

enum Role {
  TEACHER
  LEADER
  CENTRAL
}

enum Subrole {
  YEAR_COORD
  INCLUSION
  PRINCIPAL
  SCHOOL_ADMIN
  DISTRICT_ADMIN
  CEO
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  passwordHash   String
  role           Role
  subroles       Subrole[]
  orgId          String
  regionIds      String[]
  isActive       Boolean   @default(true)
  scope          Json
  permissions    String[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // indices for performance and isolation
  @@index([email])
  @@index([orgId])
  @@index([role])
  @@index([orgId, role])
}

model Student {
  id      Int      @id @default(autoincrement())
  name    String
  classId String
  logs    BehaviourLog[]
}

model BehaviourLog {
  id            Int      @id @default(autoincrement())
  student       Student  @relation(fields: [studentId], references: [id])
  studentId     Int
  author        User     @relation("AuthorLogs", fields: [authorUserId], references: [id])
  authorUserId  Int
  type          String
  note          String?
  createdAt     DateTime @default(now())
}
