{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@state/*": ["src/state/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src", "server"],
  "exclude": ["node_modules", "dist", "build"]
}
